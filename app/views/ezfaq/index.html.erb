<div class="contextual">
<%= link_to_if_authorized l(:label_faq_new),
                          {:controller => 'ezfaq', :action => 'new', :id => @project},
                          :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_faq) %></h2>
<p class="subtitle">--------</p>

<% @categorized_faqs.group_by(&:category).sort.each do |category, faqs| %>
    <h3><%= "#{category.list_order}. #{category.name}" %></h3>
    <%= render :partial => 'ezfaq/faqs_in_category', :object => faqs.sort{|a, b| a.question <=> b.question} %>
<% end %>
<% if @not_categorized_faqs.length > 0 %>
    <h3><%= "#{@category_count + 1}. #{l(:label_not_categorized)}" %></h3>
    <%= render :partial => 'ezfaq/faqs_in_category', :object => @not_categorized_faqs %>
<% end %>

<% content_for :sidebar do %>
    <%= render :partial => 'ezfaq/sidebar' %>
<% end %>

<% html_title(l(:label_title_ezfaq)) -%>